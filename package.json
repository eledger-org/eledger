{
  "name": "eledger",
  "version": "1.0.0",
  "description": "A NodeJS api for serving eledger clients.",
  "main": "index.js",
  "scripts": {
    "dev": "NODE_ENV=development nodemon --watch . --ignore static -e js,hbs,json index.js",
    "start": "NODE_ENV=production nodejs index.js",
    "test": "./bin/run_tests.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/eledger-org/eledger.git"
  },
  "author": "Henry Brown",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/eledger-org/eledger/issues"
  },
  "homepage": "https://github.com/eledger-org/eledger#readme",
  "dependencies": {
    "body-parser": "^1.15.1",
    "circular-json": "^0.3.0",
    "config": "^1.21.0",
    "eslint": "^2.13.0",
    "express": "^4.13.4",
    "hbs": "^4.0.0",
    "jquery": "^2.2.4",
    "jsdom": "^9.2.1",
    "json": "^9.0.4",
    "mocha": "^2.5.3",
    "mysql": "^2.10.2",
    "node-android-logging": "https://github.com/eledger-org/node-android-logging.git",
    "q": "^1.4.1",
    "squel": "^5.3.1"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "rules": {
      "comma-dangle": "warn",
      "semi": "error",
      "curly": "error",
      "quotes": [
        "error",
        "double"
      ],
      "indent": [
        "error",
        2
      ],
      "linebreak-style": [
        "error",
        "unix"
      ]
    }
  }
}
